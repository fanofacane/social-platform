<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.in_sky1.mapper.CollectionsMapper">
    <!--根据ID更新员工基本信息-->
    <!--set标签: 会自动生成set关键字; 会自动的删除掉更新字段后多余,-->


    <select id="getCollectionListByUserId" resultType="com.example.in_sky1.pojo.Card">
        SELECT *
        FROM posts left join collections on posts.id=collections.post_id
        WHERE collections.user_id = #{userId}
    </select>
</mapper>